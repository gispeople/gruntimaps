 @{
    ViewData["Title"] = "Create New Layer";
}

@model GruntiMaps.Models.ConversionMessageData
<style type="text/css">
    .editor-label { display: inherit; }
    .editor-field { display: inherit; }
</style>

<h2>@ViewData["Title"]</h2>
@using(Html.BeginForm()) {
    <fieldset>
    <legend>Data Source</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Description)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.DataLocation)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.DataLocation)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.LayerName)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.LayerName)
    </div>
    <input type="submit" value="Queue Conversion" />
    </fieldset>
}
